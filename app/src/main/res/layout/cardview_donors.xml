<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_cardView"
            android:background="@color/colorExtraLightGrey"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorName"
                android:textColor="#000"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:text="Name:   " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorBloodtype"
                android:layout_below="@+id/TV_donorName"
                android:textColor="#000"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:text="Blood Group:   "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorContact"
                android:layout_below="@+id/TV_donorBloodtype"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Contact #:   "/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCall"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:text="Call"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMessage"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_below="@+id/btnCall"
                android:layout_alignParentEnd="true"
                android:paddingBottom="10dp"
                android:text="Message"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>