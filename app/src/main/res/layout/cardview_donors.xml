<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_cardView"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:text="Name:               " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_registration"
                android:layout_below="@id/TV_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:text="Reg ID:              " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_Bloodtype"
                android:layout_below="@+id/TV_registration"
                android:textColor="#000"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:text="Blood Group:                "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_Contact"
                android:layout_below="@+id/TV_Bloodtype"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Contact #:                "
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorName"
                android:layout_toEndOf="@+id/TV_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorRegistration"
                android:layout_toEndOf="@+id/TV_registration"
                android:layout_below="@+id/TV_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorBloodType"
                android:textColor="#000"
                android:textSize="15sp"
                android:text=""
                android:layout_below="@+id/TV_registration"
                android:layout_toEndOf="@+id/TV_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorContact"
                android:textColor="#000"
                android:textSize="15sp"
                android:text=""
                android:layout_below="@+id/TV_Bloodtype"
                android:layout_alignStart="@+id/TV_donorName" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CB_bleed"
                android:textSize="15sp"
                android:text="Please check if donor is agree to donate blood"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/TV_Contact"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCall"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:text="Call"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMessage"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_below="@+id/btnCall"
                android:layout_alignParentEnd="true"
                android:paddingBottom="10dp"
                android:text="Message"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>