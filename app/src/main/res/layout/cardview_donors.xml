<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RL_cardView"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_registration"
                android:layout_below="@id/TV_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/reg_id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_Bloodtype"
                android:layout_below="@+id/TV_registration"
                android:textColor="#000"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/blood_group"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_Contact"
                android:layout_below="@+id/TV_Bloodtype"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="@string/contact"
                android:paddingBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorName"
                android:layout_toEndOf="@+id/TV_name"
                android:layout_toRightOf="@+id/TV_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:text=""
                tools:ignore="RelativeOverlap" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorRegistration"
                android:layout_toEndOf="@+id/TV_registration"
                android:layout_toRightOf="@+id/TV_registration"
                android:layout_below="@+id/TV_name"
                android:textColor="#000"
                android:textSize="15sp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorBloodType"
                android:textColor="#000"
                android:textSize="15sp"
                android:text=""
                android:layout_below="@+id/TV_registration"
                android:layout_toEndOf="@+id/TV_Bloodtype"
                android:layout_toRightOf="@id/TV_Bloodtype"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_donorContact"
                android:textColor="#000"
                android:textSize="15sp"
                android:text=""
                android:layout_below="@+id/TV_Bloodtype"
                android:layout_toEndOf="@+id/TV_Contact"
                android:layout_toRightOf="@id/TV_Contact"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CB_bleed"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/please_check_if_donor_is_agree_to_donate_blood"
                android:textColor="#786351"
                android:layout_below="@id/TV_Contact"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <Button
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:id="@+id/btnCall"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_background"
                android:textAllCaps="false"
                android:text="@string/call"/>

            <Button
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:id="@+id/btnMessage"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_below="@+id/btnCall"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:textAllCaps="false"
                android:text="@string/message"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>