<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_nav">


    <include layout="@layout/homepage_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/activity_vertical_margin">

                <com.andexert.library.RippleView
                    android:id="@+id/RL_notifications"
                    rv_centered="true"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:rv_color="@color/colorAccent"
                    app:rv_rippleDuration="150"
                    app:rv_zoom="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:background="@drawable/homebutton_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/activity_vertical_margin"
                            android:drawableTop="@drawable/notification"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/notifications"
                            android:textColor="#786351"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/RL_timetable"
                    rv_centered="true"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:rv_color="@color/colorAccent"
                    app:rv_rippleDuration="150"
                    app:rv_zoom="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/homebutton_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/activity_vertical_margin"
                            android:drawableTop="@drawable/calendar"
                            android:text="@string/timetable"
                            android:textColor="#786351"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </com.andexert.library.RippleView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/activity_vertical_margin">

                <com.andexert.library.RippleView
                    android:id="@+id/RL_complaintPoll"
                    rv_centered="true"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:rv_color="@color/colorAccent"
                    app:rv_rippleDuration="150"
                    app:rv_zoom="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:background="@drawable/homebutton_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/activity_vertical_margin"
                            android:drawableTop="@drawable/complaint"
                            android:text="@string/complaint_poll"
                            android:textColor="#786351"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/RL_trackFaculty"
                    rv_centered="true"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:rv_color="@color/colorAccent"
                    app:rv_rippleDuration="150"
                    app:rv_zoom="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/homebutton_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/activity_vertical_margin"
                            android:drawableTop="@drawable/tracking"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/track_faculty"
                            android:textColor="#786351"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </com.andexert.library.RippleView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/activity_vertical_margin">

                <com.andexert.library.RippleView
                    android:id="@+id/RL_parking"
                    rv_centered="true"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:rv_color="@color/colorAccent"
                    app:rv_rippleDuration="150"
                    app:rv_zoom="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:background="@drawable/homebutton_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/activity_vertical_margin"
                            android:drawableTop="@drawable/parking"
                            android:text="@string/parking"
                            android:textColor="#786351"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/RL_bloodBank"
                    rv_centered="true"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:rv_color="@color/colorAccent"
                    app:rv_rippleDuration="150"
                    app:rv_zoom="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/homebutton_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/activity_vertical_margin"
                            android:drawableTop="@drawable/blood"
                            android:text="@string/blood_bank"
                            android:textColor="#786351"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </com.andexert.library.RippleView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>