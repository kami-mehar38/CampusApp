<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="90dp"
        android:weightSum="10"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TV_ciit"

            android:textColor="#4080ff"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:drawableLeft="@drawable/comsats_logo"
            android:drawableStart="@drawable/comsats_logo"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:textSize="50sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:layout_weight="8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_faculty_and_students"
            android:id="@+id/TV_forSignup"
            android:layout_marginTop="70dp"
            android:textSize="14sp"
            android:textColor="#000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signup"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:drawableEnd="@drawable/icon_signup"
            android:drawableRight="@drawable/icon_signup"
            android:background="@drawable/button_background"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_admins"
            android:id="@+id/TV_forLogin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="14sp"
            android:textColor="#000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:drawableEnd="@drawable/icon_login"
            android:drawableRight="@drawable/icon_login"
            android:background="@drawable/button_background"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

</LinearLayout>