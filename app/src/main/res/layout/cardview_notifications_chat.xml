<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/CVrequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RL_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/profile_picture"
                android:scaleType="centerCrop"
                android:src="@drawable/initial_page_background" />

            <TextView
                android:id="@+id/TV_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/profilePicture"
                android:layout_toRightOf="@id/profilePicture"
                android:text="Dawa Society"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_recentMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/profilePicture"
                android:layout_toRightOf="@id/profilePicture"
                android:layout_below="@+id/TV_groupName"
                android:text="Dawa Society"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/counterBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_badge_style"
                android:text="1"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="9:25 am"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/counterBadge"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>