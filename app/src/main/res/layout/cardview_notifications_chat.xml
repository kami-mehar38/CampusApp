<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/CV_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RL_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/cardview_status_background">

            <ImageView
                android:id="@+id/IV_profilePicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/profile_picture"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_picture"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/IV_profilePicture"
                android:layout_toRightOf="@id/IV_profilePicture"
                android:layout_toLeftOf="@+id/TV_counterBadge"
                android:layout_toStartOf="@+id/TV_counterBadge"
                android:layout_centerVertical="true"
                android:orientation="vertical">

            <TextView
                android:id="@+id/TV_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Kamran Ramzan" />

            <TextView
                android:id="@+id/TV_recentMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textStyle="normal"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Recent Message"/>

            </LinearLayout>

            <TextView
                android:id="@+id/TV_counterBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_badge_style"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="12dp" />

            <TextView
                android:id="@+id/TV_timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TV_counterBadge"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/timing"
                android:drawableLeft="@drawable/timing"
                android:drawablePadding="3dp"
                android:gravity="center"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>