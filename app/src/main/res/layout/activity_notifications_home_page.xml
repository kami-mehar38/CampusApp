<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notifications_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="abbottabad.comsats.campusapp.NotificationsHomePage">

    <include layout="@layout/notifications_home_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/listSoftSociety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/notification_type_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/soft_society"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textColor="#727272"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_list_softsociety"
                    android:drawableStart="@drawable/ic_list_softsociety"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:id="@+id/textView2" />

                <TextView
                    android:id="@+id/badgeSoftSociety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/notification_badge_style"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/listFunkada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/notification_type_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/funkada"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textColor="#727272"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_list_funkada"
                    android:drawableStart="@drawable/ic_list_funkada"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/badgeFunkada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/notification_badge_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/notification_type_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hertz_society"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textColor="#727272"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_list_hertz"
                    android:drawableStart="@drawable/ic_list_hertz"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/badgeHetzSociety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/notification_badge_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/notification_type_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/aadrish"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textColor="#727272"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_list_aadrish"
                    android:drawableStart="@drawable/ic_list_aadrish"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/badgeAadrish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/notification_badge_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/notification_type_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/comsats_literary_society"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textColor="#727272"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_list_cls"
                    android:drawableStart="@drawable/ic_list_cls"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/badgeCLS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/notification_badge_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/notification_type_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ieee_society"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textColor="#727272"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_list_others"
                    android:drawableStart="@drawable/ic_list_others"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/badgeIEEESociety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/notification_badge_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/notification_type_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/others"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textColor="#727272"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_list_others"
                    android:drawableStart="@drawable/ic_list_others"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/badgeOthers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/notification_badge_style"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
