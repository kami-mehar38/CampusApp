<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#fafafa">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/signuppage_toolbar"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/ETname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_top_rounded"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:hint="@string/name_simple"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@drawable/edittext_cursor_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />




                <EditText
                    android:id="@+id/ETregistration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_bottom_radius"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:hint="@string/registration_id"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@drawable/edittext_cursor_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginTop="44dp"
                    android:layout_weight=".28"
                    android:layout_gravity="center"
                    android:background="@drawable/spinner_background_style"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/SPsignupOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/IV_openBloodSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/SPsignupOptions"
                        android:layout_toEndOf="@+id/SPsignupOptions"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_expand"
                        android:contentDescription="@string/login_account" />

                </RelativeLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:id="@+id/btnSignup"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_background"/>

            </LinearLayout>

        </ScrollView>

</LinearLayout>