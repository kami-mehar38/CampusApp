<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.andexert.library.RippleView
        android:id="@+id/more"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rv_color="#a6cd96"
        app:rv_rippleDuration="150">

        <RelativeLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/TV_teacherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/btnTimetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/timetable"
                android:src="@drawable/ic_list_timetable" />

            <TextView
                android:id="@+id/TV_teacherRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TV_teacherName"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/TV_teacherStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TV_teacherRegistration"
                android:textSize="16sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </com.andexert.library.RippleView>

</android.support.v7.widget.CardView>