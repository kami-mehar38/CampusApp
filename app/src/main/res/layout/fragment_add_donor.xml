<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/ETDname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_top_rounded"
            android:drawableStart="@drawable/ic_username"
            android:drawableLeft="@drawable/ic_username"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/name_simple"
            android:inputType="textPersonName"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp"
            android:textColor="#000"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textSize="16sp"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/ETDregID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_middle"
            android:drawableStart="@drawable/ic_registration"
            android:drawableLeft="@drawable/ic_registration"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/registration_id"
            android:inputType="textPersonName"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp"
            android:textColor="#000"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textSize="16sp"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/ETDcontact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_bottom_radius"
            android:drawableStart="@drawable/ic_contact"
            android:drawableLeft="@drawable/ic_contact"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/contact_simple"
            android:inputType="phone"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp"
            android:textColor="#000"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textSize="16sp"
            android:textStyle="normal" />

        <CheckBox
            android:id="@+id/CB_bleeding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="39dp"
            android:text="@string/last_bleeding_date_if"
            android:textColor="#ff0000"
            android:textSize="17sp" />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#fff"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:background="@drawable/spinner_background_style"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="12dp">

            <Spinner
                android:id="@+id/SP_bloodTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/IV_openBloodSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/SP_bloodTypes"
                android:layout_toRightOf="@+id/SP_bloodTypes"
                android:contentDescription="@string/login_account"
                android:src="@drawable/ic_action_expand" />

        </RelativeLayout>


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="39dp"
            android:background="@drawable/button_background"
            android:text="@string/add"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</ScrollView>