<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/TILDname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ETDname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="33dp"
                android:background="@drawable/editext_style"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/TILDregID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Registration ID">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ETDregID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/editext_style"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TILDcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Contact #">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ETDcontact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/editext_style"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:ems="10"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/CB_bleeding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="39dp"
            android:text="Last bleeding date, if"
            android:textColor="#786351"
            android:textSize="17sp" />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

        </DatePicker>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:layout_weight=".28"
            android:background="@drawable/spinner_background_style"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="12dp">

            <Spinner
                android:id="@+id/SP_bloodTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/IV_openBloodSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/SP_bloodTypes"
                android:layout_toRightOf="@+id/SP_bloodTypes"
                android:contentDescription="@string/login_account"
                android:src="@drawable/ic_action_expand" />

        </RelativeLayout>


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="39dp"
            android:background="@drawable/button_background"
            android:text="@string/add"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</ScrollView>