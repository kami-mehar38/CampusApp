<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00A27C"
        android:padding="25dp">

        <EditText
            android:id="@+id/ET_editSlotSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/edittext_edit_slot"
            android:textCursorDrawable="@drawable/edittext_slot_cursor_color"
            android:hint="@string/enter_subject_name"
            android:inputType="text"
            android:maxLength="30"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ET_editSlotTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ET_editSlotSubject"
            android:layout_marginBottom="25dp"
            android:background="@drawable/edittext_edit_slot"
            android:textCursorDrawable="@drawable/edittext_slot_cursor_color"
            android:hint="@string/enter_teacher_name"
            android:inputType="text"
            android:maxLength="30"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ET_editSlotRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ET_editSlotTeacher"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/edittext_edit_slot"
            android:textCursorDrawable="@drawable/edittext_slot_cursor_color"
            android:hint="@string/room"
            android:inputType="text"
            android:maxLength="4"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ET_editSlotRoom"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_button_style"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp" />

    </RelativeLayout>
</ScrollView>