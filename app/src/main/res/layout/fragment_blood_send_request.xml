<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    tools:context=".BloodBankView"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/name_simple"
            android:id="@+id/ETname"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/edittext_top_rounded"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/registration_id"
            android:id="@+id/ETregistration"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/edittext_middle"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/contact_simple"
            android:id="@+id/ETcontact"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/edittext_bottom_radius"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000"
            />






    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginTop="44dp"
        android:layout_weight=".28"
        android:layout_gravity="center"
        android:background="@drawable/spinner_background_style"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/SPbloodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <ImageView
            android:id="@+id/IV_openBloodSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/SPbloodType"
            android:layout_toEndOf="@+id/SPbloodType"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_expand"
            android:contentDescription="@string/login_account" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:id="@+id/btnsendRequest"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_background"/>

</LinearLayout>

</ScrollView>